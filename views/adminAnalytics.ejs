<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Analytics Dashboard - WebGIS Futsal Padang</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar">
        <div class="container">
            <div class="nav-brand">
                <i class="fas fa-chart-line"></i>
                <span>Analytics Dashboard</span>
            </div>
            <div class="nav-menu">
                <a href="/admin/dashboard" class="nav-link">Dashboard</a>
                <a href="/" class="nav-link">Beranda</a>
                <span class="nav-user">
                    <i class="fas fa-user-shield"></i> <%= user.username %>
                </span>
                <a href="/logout" class="btn btn-secondary">Logout</a>
            </div>
        </div>
    </nav>

    <!-- Analytics Content -->
    <div class="analytics-container">
        <!-- Stats Cards -->
        <div class="stats-grid">
            <div class="stat-card stat-primary">
                <div class="stat-icon">
                    <i class="fas fa-futbol"></i>
                </div>
                <div class="stat-content">
                    <h3 id="totalLapangan">-</h3>
                    <p>Total Lapangan</p>
                </div>
            </div>

            <div class="stat-card stat-success">
                <div class="stat-icon">
                    <i class="fas fa-users"></i>
                </div>
                <div class="stat-content">
                    <h3 id="totalUsers">-</h3>
                    <p>Total Users</p>
                </div>
            </div>

            <div class="stat-card stat-warning">
                <div class="stat-icon">
                    <i class="fas fa-star"></i>
                </div>
                <div class="stat-content">
                    <h3 id="totalReviews">-</h3>
                    <p>Total Reviews</p>
                </div>
            </div>

            <div class="stat-card stat-info">
                <div class="stat-icon">
                    <i class="fas fa-chart-bar"></i>
                </div>
                <div class="stat-content">
                    <h3 id="avgRating">-</h3>
                    <p>Rata-rata Rating</p>
                </div>
            </div>
        </div>

        <!-- Charts Grid -->
        <div class="charts-grid">
            <!-- Chart: Popular Lapangan -->
            <div class="chart-card">
                <div class="chart-header">
                    <h3><i class="fas fa-trophy"></i> Lapangan Terpopuler</h3>
                    <p class="chart-subtitle">Berdasarkan jumlah ulasan</p>
                </div>
                <div class="chart-container">
                    <canvas id="popularLapanganChart"></canvas>
                </div>
            </div>

            <!-- Chart: Rating Distribution -->
            <div class="chart-card">
                <div class="chart-header">
                    <h3><i class="fas fa-star-half-alt"></i> Distribusi Rating</h3>
                    <p class="chart-subtitle">Jumlah rating per bintang</p>
                </div>
                <div class="chart-container">
                    <canvas id="ratingDistributionChart"></canvas>
                </div>
            </div>

            <!-- Chart: Rating Trend -->
            <div class="chart-card chart-wide">
                <div class="chart-header">
                    <h3><i class="fas fa-chart-line"></i> Trend Rating per Bulan</h3>
                    <p class="chart-subtitle">6 bulan terakhir</p>
                </div>
                <div class="chart-container">
                    <canvas id="ratingTrendChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/analytics.js"></script>
</body>
</html>
